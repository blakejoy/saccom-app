{
  "name": "student-form-app",
  "version": "0.1.0",
  "description": "A desktop application for tracking student accommodations and daily progress",
  "author": "Blake Joynes",
  "private": true,
  "main": "dist-electron/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blakejoy/saccom-app.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/lib/db/seed.ts",
    "icons:generate": "node scripts/generate-icons.js",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "vite",
    "electron:build": "tsc && vite build && electron-builder",
    "electron:build:mac": "tsc && vite build && electron-builder --mac",
    "electron:build:win": "tsc && vite build && electron-builder --win"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.36.4",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.468.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.30.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.17.0",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.2.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "build": {
    "appId": "com.studentformapp",
    "productName": "student-accommodation-tracker",
    "asar": true,
    "files": [
      "dist-electron",
      "dist-renderer",
      "drizzle",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "drizzle",
        "to": "drizzle"
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "app": ".",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "blakejoy",
      "repo": "saccom-app"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.education",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
